{
    "name": "handmadeweb/frosty",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "statamic/cms": "3.1.*||3.2.*||3.3.*||3.4.*||4.*.*"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0||^5.0||^6.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "autoload": {
        "psr-4": {
            "HandmadeWeb\\Frosty\\": "src"
        }
    },
    "extra": {
        "statamic": {
            "name": "Frosty",
            "description": "Frosty provides easy access to fetch Ajax content in Statamic."
        },
        "laravel": {
            "providers": [
                "HandmadeWeb\\Frosty\\ServiceProvider"
            ]
        }
    }
}
